    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "プログラムの起動",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "program": "${workspaceFolder}/src/index.ts",
            "args": [
                // "chat",
                // "おはよう",
                "prompt",
                // "entity",
                // "./sample/address.ddl",
                "trans",
                "--input=README.md",
                "--output=./en/README.md",
                "--debug",
            ],
            "preLaunchTask": "build",
            "outFiles": [
                "${workspaceFolder}/out/**/*.js"
            ],
            "runtimeArgs": [
                "--loader",
                "ts-node/esm"
            ],
            "sourceMaps": true,
        }
    ]
}